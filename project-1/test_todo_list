class TestTodoListApp(unittest.TestCase):


    @classmethod
    def setUpClass(self):
        self.todo_list = TodoList()

    def test_add_task(self):
        """
        This method adds a task to the todo list
        Args:
        task: designates the task to be added to the list.
        """
        task = Task('Test Task')
        self.todo_list.add_task(task)
        self.assertIsInstance(self.todo_list.tasks, Task)
        self.assertEqual(self.todo_list.description, 'Test Task')



        # self.assertEqual(

    def test_add_event(self):
        event = Event('Test Event','Test Location','Test Time', 'Test Day')
        self.todo_list.add_event(event)
        self.assertIsInstance(self.todo_list.tasks, Event)
        self.assertEqual(self.todo_list.description, 'Test Event')
        self.assertEqual(self.todo_list.location, 'Test Location')
        self.assertEqual(self.todo_list.time, 'Test Time')
        self.assertEqual(self.todo_list.day, 'Test Day')        


